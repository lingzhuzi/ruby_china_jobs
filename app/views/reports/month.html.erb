<h3>Ruby职位月份统计</h3>

<div class="form-group form-inline">
  <form action="/reports/month" method="get">
    <div class="input-group date form_datetime col-lg-3" data-date-format="yyyy-mm" id="month_from">
      <div class="input-group-addon">From</div>
      <input class="form-control" size="16" type="text" name="from" value="<%= params[:from] %>" readonly>
      <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
      <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
    </div>

    <div class="input-group date form_datetime col-lg-3" data-date-format="yyyy-mm" id="month_to">
      <div class="input-group-addon">To</div>
      <input class="form-control" size="16" type="text" name="to" value="<%= params[:to] %>" readonly>
      <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
      <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
    </div>

    <div class="input-group col-lg-2">
      <div class="input-group">
        <button type="submit" class="btn btn-primary" id='draw_report'>确定</button>
      </div>
    </div>
  </form>
</div>


<table>
  <tr>
    <th width="100px">月份</th>
    <th width="100px">城市</th>
    <th width="100px">职位数量</th>
  </tr>
  <% @reports.each do |report| %>
    <tr>
      <td><%= report.name %></td>
      <td><%= report.city.name %></td>
      <td><%= report.job_num %></td>
    </tr>
    <% end %>
</table>

<% content_for :js do %>
  <%= javascript_include_tag 'month_report' %>
<% end %>